@model PizzaPan.EntityLayer.Concrete.Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Kategori Güncelle</h3>
<hr />

<form method="post">

    <input type="hidden" asp-for="CategoryId"  class="form-control"  />

    <div class="mt-3">
        <label>Kategori Adı</label>
        <input type="text" asp-for="CategoryName"  class="form-control" placeholder="Kategori Adı" />

    </div>

    <div class="mt-3">

        <a href="/Category/Index/" class="btn btn-danger">İptal</a>
        <input type="submit" class="btn btn-warning" value="Güncelle" />

    </div>

</form>

