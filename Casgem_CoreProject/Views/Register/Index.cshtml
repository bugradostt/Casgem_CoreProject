@model PizzaPan.PresentationLayer.Models.RegisterViewModel

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


<div class="container">
    <h3>Üye Ol</h3>
    <hr />

    <form method="post">

        <div class="mt-3">
            <label>Adınız</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Adınız" />
        </div>

        <div class="mt-3">
            <label>Soyadını</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="Adınız" />
        </div>

        <div class="mt-3">
            <label>Mail</label>
            <input type="text" asp-for="Mail" class="form-control" placeholder="Adınız" />
        </div>

        <div class="mt-3">
            <label>Kullanıcı Adı</label>
            <input type="text" asp-for="UserName" class="form-control" placeholder="Adınız" />
        </div>
        <div class="mt-3">
            <label>Şifre</label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Adınız" />
        </div>

        <div class="mt-3">
            <label>Şifre Tekrar</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Adınız" />
        </div>

        <input type="submit" class="btn btn-success" value="Kayıt Ol" />

    </form>


</div>
