@model PizzaPan.PresentationLayer.Models.RegisterViewModel

@{
    Layout = null;
}

<head>
    <title>Kayıt Ol</title>
</head>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<br />
<br />


<div class="container">
    <h3>Üye Ol</h3>
    <hr />

    <form method="post">

        <div class="mt-3">
            <label>Ad</label>
            <input type="text" asp-for="Name" required class="form-control" placeholder="Adınız" />
        </div>

        <div class="mt-3">
            <label>Soyad</label>
            <input type="text" asp-for="Surname" required class="form-control" placeholder="Soyadınız" />
        </div>

        <div class="mt-3">
            <label>Mail</label>
            <input type="text" asp-for="Mail" required class="form-control" placeholder="Mailiniz" />
        </div>

        <div class="mt-3">
            <label>Kullanıcı Adı</label>
            <input type="text" asp-for="UserName" required  class="form-control" placeholder="Kullanıcı adınız" />
        </div>
        <div class="mt-3">
            <label>Şifre</label>
            <input type="password" asp-for="Password"  required class="form-control" placeholder="Şifreniz" />
        </div>

        <div class="mt-3">
            <label>Şifre Tekrar</label>
            <input type="password" asp-for="ConfirmPassword" required  class="form-control" placeholder="Şifre tekrar" />
        </div>

        <br />

        <input type="submit" class="btn btn-success" value="Kayıt Ol" />

        <div class="text-danger" 
             asp-validation-summary="ModelOnly"
             >

            
        </div>

    </form>


</div>
