@model PizzaPan.EntityLayer.Concrete.Product
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Ürün Güncelle</h3>
<hr />

<form method="post">

    <input type="hidden" asp-for="ProductId" class="form-control" placeholder="Ürün Adı" />


    <div class="mt-3">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" placeholder="Ürün Adı" />
    </div>

    <div class="mt-3">
        <label>Ürün Fiyatı</label>
        <input type="text asp-for="ProductPrice" class="form-control" placeholder="Ürün Adı" />
    </div>

    <div class="mt-3">
        <label>Ürün Fotoğrafı</label>
        <input type="text" asp-for="ProductImageUrl" class="form-control" placeholder="Ürün Adı" />
    </div>

    <div class="mt-3">
        <label>Katagori</label>
        <input type="text" asp-for="Category" class="form-control" placeholder="Ürün Adı" />
    </div>

    <div class="mt-3">
        <label>Açıklama</label>
        <textarea asp-for="ProductDescription" class="form-control" placeholder="Ürün Adı"></textarea>
    </div>

    <div class="mt-3">

        <a href="/Product/Index/" class="btn btn-danger">İptal</a>
        <input type="submit" class="btn btn-warning" value="Ekle" />

    </div>

</form>
