@model PizzaPan.EntityLayer.Concrete.Product
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Ürün Ekle</h3>
<hr />

<form method="post">

    <div class="mt-3">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" placeholder="Ürün Adı" />
    </div>

    <div class="mt-3">
        <label>Ürün Fiyatı</label>
        <input type="number" asp-for="ProductPrice" class="form-control" placeholder="Ürün fiyatı" />
    </div>

    <div class="mt-3">
        <label>Ürün Fotoğrafı</label>
        <input type="text" asp-for="ProductImageUrl" class="form-control" placeholder="Ürün fotoğraf url" />
    </div>

    <div class="mt-3">
       <label>Kategori</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.categoryList" class="form-control dropdown-toggle">
            <option >Kategori Seçiniz</option>
        </select>
       
    </div>

    <div class="mt-3">
        <label>Açıklama</label>
        <textarea asp-for="ProductDescription" rows="10"  class="form-control" placeholder="Açıklama" ></textarea>
    </div>

    <div class="mt-3">

        <a href="/Product/Index/" class="btn btn-danger">İptal</a>
        <input type="submit" class="btn btn-success" value="Ekle" />

    </div>

</form>
