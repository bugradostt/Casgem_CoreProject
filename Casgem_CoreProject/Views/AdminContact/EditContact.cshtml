@model PizzaPan.EntityLayer.Concrete.ContactInfo
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>İletişim Güncelle</h3>
<hr />

<form method="post">

    <input type="hidden" class="form-control" name="ContactInfoId" asp-for="ContactInfoId" />

   
        <div class="mt-3">

            <label>Telefon</label>
        <input type="text" class="form-control" name="ContactInfoPhone" asp-for="ContactInfoPhone" />


        </div>


        <div class="mt-3">

            <label>Mail</label>
        <input type="text" class="form-control" name="ContactInfoMail" asp-for="ContactInfoMail" />

        </div>

        <div class="mt-3">

            <label>Adres</label>
            <input type="text" class="form-control" name="ContactInfoAdress" asp-for="ContactInfoAdress" />

        </div>

        <div class="mt-3">

            <label>Harita</label>
        <textarea name="ContactInfoMaps" class="form-control" rows="3" asp-for="ContactInfoMaps"></textarea>
         
        </div>

        <a class="btn btn-danger" href="/AdminContact/Index/">İptal</a>
        <input  type="submit" value="Güncelle" class="btn btn-warning"/>
   


</form>
